{
    //================================================================
    // General & UI Settings
    //================================================================
    "workbench.colorTheme": "Atom One Dark",
    "workbench.iconTheme": "material-icon-theme",
    "explorer.confirmDelete": false,
    "security.allowedUNCHosts": [
        "isSHFS.intel.com"
    ],
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "files.autoSave": "afterDelay", // Автосохранение, включено
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true
        //"**/.venv": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.venv": true
    },
    "editor.lineNumbers": "on", // Добавлена нумерация строк для редактора

    //================================================================
    // Git & GitHub Copilot Settings
    //================================================================
    "github.copilot.enable": {
        "*": true,
        "markdown": true,
        "json": true,
        "yaml": true,
        "jsonc": true,
        "python": true,
        "plaintext": false
    },
    "git.autofetch": true,
    "git.openRepositoryInParentFolders": "always",
    "github.copilot.nextEditSuggestions.enabled": true,
    "editor.inlineSuggest.edits.showCollapsed": true,
    "editor.inlineSuggest.edits.allowCodeShifting": "always",
    "editor.inlineSuggest.edits.renderSideBySide": "auto",

    //================================================================
    // Python & Jupyter Settings
    //================================================================
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe", // Добавлена настройка пути к окружению
    "python.terminal.activateEnvironment": true, // Добавлена настройка активации окружения в терминале
    "python.createEnvironment.trigger": "off",
    "python.testing.pytestArgs": [
        "."
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "jupyter.interactiveWindow.textEditor.executeSelection": true,
    "jupyter.interactiveWindow.creationMode": "perFile",
    "jupyter.askForKernelRestart": false,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "notebook.output.textLineLimit": 100,
    "notebook.lineNumbers": "on",

    //================================================================
    // Language-Specific Settings for Python
    //================================================================
    "python.analysis.languageServerMode": "default",
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingTypeStubs": "none"
    },
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll.ruff": "explicit"
        }
    }
}
